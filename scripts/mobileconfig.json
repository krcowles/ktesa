{
  "compilerOptions": {
      "moduleResolution": "Node",
      "target": "es2020",
      "module": "none",
      "lib": ["es2020", "DOM"],
      "skipLibCheck": true,
      "strict": true,
      "noImplicitAny": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true,
      "allowSyntheticDefaultImports": true, 
      "allowJs": true
  },
  "exclude": [
    "**/*.js"
  ],
  "files": [
    "landing.ts",
    "loginState.ts",
    "logo.ts",
    "viewMgr.ts",
    "mapOnly.ts",
    "navMenu.ts",
    "responsiveCaptions.ts",
    "responsivePics.ts",
    "responsiveTable.ts",
    "responsivePage.ts",
    "searchbar.ts",
    "ktesaOfflineDB.ts",
    "useOffline.ts"
  ]
}
